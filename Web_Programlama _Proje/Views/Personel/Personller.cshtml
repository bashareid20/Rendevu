@model IEnumerable<Web_Programlama__Proje.Models.Personel>

<div class="alert-danger">@TempData["msj"]</div>

<h4>Personeller</h4>

<p>
    <a asp-action="PersonelEkle" class="btn btn-primary">Personel Ekle</a>
</p>

<table class="table table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().PersonelID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PersonelAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PersonelSoyAd)
            </th>
            <th>
                Hizmetler
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.PersonelID
                </td>
                <td>
                    @item.PersonelAd
                </td>
                <td>
                    @item.PersonelSoyAd
                </td>
                <td>
                    @if (item.PersonelHizmetler != null && item.PersonelHizmetler.Any())
                    {
                        @foreach (var hizmet in item.PersonelHizmetler)
                        {
                            <span class="badge bg-secondary">@hizmet.Hizmetler.HizmetAd</span>

                            <br />
                        }
                    }
                    else
                    {
                        <span>Hizmet atanmadı</span>
                    }
                </td>


                <td>
                    <a asp-action="Edit" asp-route-id="@item.PersonelID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.PersonelID" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="PersonelSil" asp-route-id="@item.PersonelID" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
