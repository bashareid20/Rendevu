@model IEnumerable<Web_Programlama__Proje.Models.Hizmetler>

@{
    ViewBag.Title = "Hizmetler Listesi";
}

<div class="container mt-5">
    <h2 class="text-center">Hizmetler Listesi</h2>
    <a asp-action="HizmetEkle" class="btn btn-primary mb-3">Yeni Hizmet Ekle</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Hizmet Adı</th>
                <th>Ücret</th>
                <th>Süre (dk)</th>
                <th>Resim</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hizmet in Model)
            {
                <tr>
                    <td>@hizmet.HizmetAd</td>
                    <td>@hizmet.HizmetUcreti</td>
                    <td>@hizmet.HizmetSuresi</td>
                    <td><img src="@hizmet.HizmetResim" alt="@hizmet.HizmetAd" width="50" /></td>
                    <td>
                        <a asp-action="HizmetDuzenle" asp-route-id="@hizmet.HizmetID" class="btn btn-warning">Düzenle</a>
                        <form asp-action="HizmetSil" asp-route-id="@hizmet.HizmetID" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
